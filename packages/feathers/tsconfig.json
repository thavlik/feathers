{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "noImplicitAny": false,
        "declaration": true,
        "moduleResolution": "node",
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": "."
    },
    "include": [
        "./lib/**/*"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}